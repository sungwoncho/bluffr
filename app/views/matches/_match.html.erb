<%= div_for match, class: 'row' do %>
  <div class="col-sm-8 col-sm-offset-2">
   
    <div class="row">

      <div class="col-md-6 home-team">
        <h2><%= match.home_team %></h2>
        <h3 class="<%= match.home_score_color %>"><%= match.home_team_score %></h3>
      </div>

      <div class="col-md-6 away-team">
        <h2><%= match.away_team %></h2>
        <h3 class="<%= match.away_score_color %>"><%= match.away_team_score %></h3>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center">
        <time><%= match.match_date %></time>
        <br><br>
        <p><%= pluralize match.bluffs.count, 'bluff' %> submitted</p>
        <%= link_to "View bluffs", match_bluffs_path(match) %>
      </div>
    </div>
  </div>
<% end %>