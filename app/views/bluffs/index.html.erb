<h1>Listing bluffs</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bluffs.each do |bluff| %>
      <tr>
        <td><%= link_to 'Show', match_bluff_path(@match, bluff) %></td>
        <td><%= link_to 'Edit', edit_match_bluff_path(@match, bluff) %></td>
        <td><%= link_to 'Destroy', match_bluff_path(@match, bluff), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td><%= bluff.statement_1 %></td>
        <td><%= bluff.statement_2 %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bluff', new_match_bluff_path(@match) %>
